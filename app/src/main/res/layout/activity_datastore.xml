<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">
  <TextView
      android:id="@+id/shaTextView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>
  <Button
      android:id="@+id/shaAddBtn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="用户偏好设置"
      />

  <TextView
      android:id="@+id/fileTextView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />
  <Button
      android:id="@+id/fileAddBtn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="文件存储"
      />

  <TextView
      android:id="@+id/sqlTextView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
     android:orientation="horizontal">
    <Button
        android:id="@+id/sqlAddBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sql(增)"
        />
    <Button
        android:id="@+id/sqlDeleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sql(删)"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/sqlUpdateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sql(改)"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/sqlQueryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="sql(查)"
        />
  </LinearLayout>

</LinearLayout>